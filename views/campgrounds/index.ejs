<% layout('layouts/boilerplate') %>
<div id="cluster-map" class="mb-5"></div>

<h1 class="mb-3">Explore all the campgrounds</h1>
<% for(let campground of campgrounds) { %>
  <div class="card shadow mb-3">
    <div class="row">
      <div class="col-md-4">
        <% if (campground.images.length) { %> 
          <img src="<%= campground.images[0].url %>" alt="" class="img-fluid">
        <% } else { %>
          <img src="https://res.cloudinary.com/tirsopascual/image/upload/v1655081514/YelpCamp/hpoptulcxtgxlxrhabrf.jpg" alt="" class="img-fluid">
        <% } %> 
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">
            <%= campground.title %>
          </h5>
          <p class="card-text">
            <%= campground.description.substring(0, 70) %>...
          </p>
          <p class="card-text">
            <small class="text-muted">
              in <%= campground.location %>
            </small>
          </p>
          <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">
            View <%= campground.title %>
          </a>
        </div>
      </div>
    </div>
  </div>
<% } %>

<script>
  const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
  const campgrounds = <%- JSON.stringify(campgrounds) %>;
</script>
<script src="/javascripts/clusterMap.js"></script>